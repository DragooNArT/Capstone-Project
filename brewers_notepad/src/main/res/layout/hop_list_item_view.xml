<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mashLayout"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:clickable="true"

        android:baselineAligned="true"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/view_hop_list_variety_entry"
            android:layout_row="0"
            android:layout_column="0"
            android:inputType="textAutoComplete"
            android:hint="@string/input_hopVariety_hint"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:textAlignment="center"
            android:typeface="sans"
            android:layout_weight="1" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/view_hop_list_type_entry"
            android:layout_row="0"
            android:layout_column="1"
            android:hint="@string/input_hopType_hint"
            android:layout_gravity="center_vertical|bottom"
            android:singleLine="true"
            android:inputType="number"
            android:textAlignment="center"
            android:typeface="sans"
            android:layout_weight="1" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/view_hop_list_quantity_entry"
        android:layout_row="0"
        android:layout_column="1"
        android:hint="@string/input_quantity_hint"
        android:layout_gravity="center_vertical|bottom"
        android:singleLine="true"
        android:inputType="number"
        android:textAlignment="center"
        android:typeface="sans"
        android:layout_weight="1" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/view_hop_list_when_entry"
        android:layout_row="0"
        android:layout_column="1"
        android:hint="@string/input_hopAdd_hint"
        android:layout_gravity="center_vertical|bottom"
        android:singleLine="true"
        android:inputType="number"
        android:textAlignment="center"
        android:typeface="sans"
        android:layout_weight="1" />

</LinearLayout>