<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:context=".mobile.fragments.CreateRecipeFramentMain"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Hop Phase"
            android:id="@+id/hopPhaseViewLabel"
            android:layout_gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:background="@color/colorPrimaryDark"
            android:autoText="false"
            android:textAlignment="center"
            android:textStyle="italic"
            android:contentDescription="@string/hop_phase_title_contentDesc" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:columnCount="2"
            android:rowCount="1"
            android:theme="@style/AppTheme"
            android:alignmentMode="alignBounds"
            android:useDefaultMargins="true"
            android:visibility="visible"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/hop_duration_label"
                android:id="@+id/viewHopPhaseDurationLabel"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="center_vertical"
                android:focusable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewHopPhaseDurationInput"
                android:layout_row="0"
                android:layout_column="1"
                android:hint="@string/no_entry_hint"
                android:layout_marginBottom="5dp"
                android:lines="1"
                android:singleLine="true"
                android:focusable="true"
                android:enabled="true"
                android:gravity="right"
                android:textStyle="bold|italic"
                android:typeface="normal"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginEnd="180dp"
                android:contentDescription="@string/hop_phase_time_contentDesc" />

        </GridLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/accent_material_light"
            android:layout_marginTop="16dp"
            android:paddingBottom="16dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Variety"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Type"
                android:id="@+id/textView4"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Quantity"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Add on"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/viewHopList"
            android:clickable="true"
            android:headerDividersEnabled="true"
            android:footerDividersEnabled="true"
            android:choiceMode="singleChoice"
            android:scrollIndicators="top|bottom"
            android:divider="@color/colorPrimaryDark"
            android:dividerHeight="4px"
            android:background="@color/accent_material_light"
            android:contentDescription="@string/list_hop_contentDesc" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Fermentation Phase"
            android:id="@+id/textView8"
            android:layout_gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:background="@color/colorPrimaryDark"
            android:autoText="false"
            android:textAlignment="center"
            android:textStyle="italic"
            android:contentDescription="@string/fermentation_phase_title_contentDesc" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/accent_material_light"
            android:layout_marginTop="16dp"
            android:paddingBottom="16dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Phase name"
                android:id="@+id/textView9"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Duration"
                android:id="@+id/textView12"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Temperature"
                android:id="@+id/textView10"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/viewFermentList"
            android:clickable="true"
            android:headerDividersEnabled="true"
            android:footerDividersEnabled="true"
            android:choiceMode="singleChoice"
            android:scrollIndicators="top|bottom"
            android:divider="@color/colorPrimaryDark"
            android:dividerHeight="4px"
            android:background="@color/accent_material_light"
            android:contentDescription="@string/ferm_list_contentDesc" />
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>